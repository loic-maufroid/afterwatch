{% extends 'baseAdmin.html.twig' %}


{% block title %} {{ parent() }} - Critique{% endblock %}

{% block body %}
<section class="flex jcenter">
    <table id="thèmes" class=" textc margint marginb">
        <thead class="gras sizeg">
            <th>Titre de la critique</th>
            <th>Titre Film</th>
            <th>Posté par</th>
            <th>Note</th>
            <th>Slug</th>
            <th>Contenu de la critique</th>
            <th>Actions</th>
        </thead>

        <tbody>
            {% for critique in critiques %}
            <tr>
                <td>{{ critique.titre }}</td>
                <td>{{ critique.idfilm.titre }}</td>
                <td>{{ critique.idutilisateur.username }}</td>
                <td>{{ critique.note }}</td>
                <td>{{ critique.slug }}</td>
                <td>{{ critique.contenu }}</td>
                
                <td>
                    <a href="{{ path('critique_modifier', {id: critique.id}) }}"><button type="button" class="btn btn-info btn-color marginr ">Modifier</button></a>
                    <a href="{{ path('admin_confirmcritdelete', {id: critique.id}) }}"><button type="button" class="btn btn-danger btnsup">Supprimer</button></a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td>Aucune Critique Trouvée</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</section>
{% endblock %}