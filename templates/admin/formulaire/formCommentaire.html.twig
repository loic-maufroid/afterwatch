{% extends 'baseAdmin.html.twig' %}

{% block title %} {{ parent() }} - Modifier Commentaire{% endblock %}

{% block body %}
<section class="flex jcenter margintop ">
    <form class="jumbotron scrollform">
        <p class="lobster textc ">Modifier Commentaire</p>
        <div class="text flex jbetween marginb"> 
            <p  class="courgette">Commentaire de : {{ comment.idutilisateur.username }}</p>
        </div>
        <div class="text flex jbetween margintop">
            <p class="courgette">Pour : {{ comment.idfilm.titre }}</p>
        </div>   
        
        <div class="form-group">
            <label for="inputCCommentaire">Commentaire</label>
            <textarea type="text" class="form-control" id="inputCommentaire" placeholder="Commentaire">
                {{ comment.contenu }}
            </textarea>
        </div>
        <h4 class="flex jcenter">Modifier?</h4>
        <div class="flex jcenter margintop">
            <a href="#"><button type="button" class="btn btn-success marginr">Valider</button></a>
            <a href="{{ path('admin_commentslist') }}"><button type="button" class="btn btn-danger btnsup">Annuler</button></a>
        </div>    
    </form>
</section>
{% endblock %}