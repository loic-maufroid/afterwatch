{% extends 'baseAdmin.html.twig' %}

{% block title %} {{ parent() }} - Modifier Film{% endblock %}

{% block body %}
<section class="flex jcenter margintop">
    {{ form_start(form, {'attr': {'class': 'jumbotron scrollform'}}) }}

    <h2 class="textc">Modifier un film</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_row(form.affiche, {'attr': {'class': 'form-control'}}) }}
            <div class="form-group col-md-12">
                {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
            {% for realise in film.realise %}
            <div class="form-group  col-md-6">
                <label for="inputReal">Réalisateur(s)</label>
                <input type="text" class="form-control" id="inputReal" placeholder="Réalisateur(s)"
                    value="{{ realise.nom }}">
            </div>
            {% endfor %}
        </div>
        <div class="form-row">
            {% for scenario in film.scenario %}
            <div class="form-group  col-md-6">
                <label for="inputScénariste">Scénariste(s)</label>
                <input type="text" class="form-control" id="inputScénariste" placeholder="Scénariste(s)"
                    value="{{ scenario.nom }}">
            </div>
            {% endfor %}
        </div>
        <div class="form-row">
            {% for acteurjoue in film.acteurjoue %}
            <div class="form-group  col-md-6">
                <label for="inputActeurs">Acteur(s)</label>
                <input type="text" class="form-control" id="inputCity" placeholder="Acteur(s)"
                    value="{{ acteurjoue.nom }}">
            </div>
            {% endfor %}
        </div>
        <div class="form-row">
            {% for genrefilm in film.genrefilm %}
            <div class="form-group  col-md-6">
                <label for="inputGenre">Genre(s)</label>
                <input type="text" class="form-control" id="inputZip" placeholder="Genre(s)"
                    value="{{ genrefilm.type }}">
            </div>
            {% endfor %}
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.duree, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.nationalite, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.legislation, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.trailer, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.synopsis, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="flex jcenter margintop">
            <button class="btn btn-success marginr">Valider</button>
            <a href="{{ path('admin',{page: 1}) }}"><button type="button"
                    class="btn btn-danger btnsup">Annuler</button></a>
        </div>
        {{ form_end(form) }}
</section>
{% endblock %}