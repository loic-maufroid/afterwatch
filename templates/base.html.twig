        <script>
    $(function(){

        function envoyer(){
            var query = $("#site-search").val();
            $("#films select").remove();
            if (query.trim() != "" && query.length > 3){
              
        $.ajax({
            type : 'GET',
            url : "{{ path('autocomplete_film_search') }}",
            data : 'q='+query,
            dataType : 'JSON',
        success: function(response){
            console.log("oui");
            $("#films").append("<select></select>");
 
            for (let i = 0; i < response.length; i++) {
               
                $("#films select").append("<option value='"+response[i]["titre"]+"'>Rechercher "+response[i]["titre"]+"</option>");

            }
            
        }                 
        });
    }

    }

    var timer;
    $("#site-search").keyup(function(event){
        clearTimeout(timer);
        timer = setTimeout(envoyer,1000);
        event.preventDefault();
    })
})
</script>
