{% endblock %}

{% block body %}

<h1 class="font size color textc margintop">AfterWatch</h1>
<main class="flex jcenter">

    <section class="taille">
        <form class="form margint" enctype="multipart/form-data">
            <h4 class="textc">Nous Contacter</h4>
            <div class="form-group">
                <label for="contact">Choisir contact</label>
                <select class="form-control" id="contact" placeholder="contact" required>
                    <option selected disabled value="">Personne à contacter...</option>
                    <option>...</option>
                    <option>...</option>
                    <option>...</option>
